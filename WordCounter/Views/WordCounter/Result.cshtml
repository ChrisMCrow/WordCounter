@{
  Layout = "_Layout";
}

<div class="container">
  <p class="result">The word <span class="highlight">@Model.GetWord()</span>
    occurs <span class="highlight">@Model.HowManyMatches()</span> times
    in the phrase <span class="highlight">@Model.GetString()</span></p>
  <form action="/" method="Get">
    <button type="submit" class="btn btn-primary btn-lg">Home</button>
  </form>
</div>
